<body>
    <h2>Recently Listened Tracks</h2>
    <div id="lastfm-tracks">Loading...</div>
    <script>
        fetch('https://ws.audioscrobbler.com/2.0/?method=user.getrecenttracks&user=leightonj&api_key=ff2209b2c27d048fb95424eda1dd78e1&format=json')
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            const tracks = data.recenttracks.track;
            let html = '';
            tracks.forEach(track => {
                const date = track.date ? new Date(track.date.uts * 1000) : 'Now Playing';
                const formattedDate = typeof date === 'string' ? date : date.toLocaleString();
                html += `
                    <div class="track">
                        <div><strong>${track.artist["#text"]}</strong> - ${track.name}</div>
                        <div class="timestamp">${formattedDate}</div>
                    </div>`;
            });
            document.getElementById('lastfm-tracks').innerHTML = html;
        })
        .catch(error => {
            console.error('Error:', error);
            document.getElementById('lastfm-tracks').innerHTML = 'Failed to load tracks';
        });
    </script>
</body>
</html>
