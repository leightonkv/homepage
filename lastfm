    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            background: #fafafa;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
        }
        #lastfm-tracks {
            width: 100%;
            max-width: 500px;
            padding: 20px;
            border: 1px solid #e1e1e1;
            border-radius: 10px;
            background: #fff;
        }
        .track {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
            transition: background-color 0.3s;
        }
        .track:last-child {
            border-bottom: none;
        }
        .track:hover {
            background-color: #f9f9f9;
        }
        .timestamp {
            font-size: 0.75em;
            color: #999;
            align-self: flex-end;
        }
        h2 {
            font-size: 2em;
